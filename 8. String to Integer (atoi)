class Solution(object):
    def myAtoi(self, s):
        """
        :type s: str
        :rtype: int
        """
        num = 0
        bgn = True
        neg = False
        start = 0
        while start < len(s) and s[start].isspace():
            start+=1

        for i in range(start, len(s)):
            char = s[i]
            if i == start and (s[start] == '-'or s[start] == '+'):
                neg = True if s[start] == '-' else False
                continue
            if bgn:
                if char == '0':
                    continue
            if char.isdigit():
                if bgn:
                    bgn = False
                num = num*10 + int(char)
            else:
                break
        if neg:
            num *= -1
        if num > 2**31-1:
            return 2**31-1
        elif num < -(2**31):
            return -(2**31)
        else:
            return num
