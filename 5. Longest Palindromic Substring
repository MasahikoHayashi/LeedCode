class Solution(object):
    def longestPalindrome(self, s):
        """
        :type s: str
        :rtype: str
        """
        n = len(s)
        maxlen =0
        start = 0

        for i in range(n):
            j,k = i,i
            while k+1<n and s[k+1] == s[k]:
                k+=1
            i = k+1
            while j > 0 and k<n-1 and s[j-1]==s[k+1]:
                j-=1
                k+=1
            if maxlen < k-j +1:
                maxlen = max(maxlen , k-j+1)
                start = j
        
        return s[start: start+maxlen]
