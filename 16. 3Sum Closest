class Solution(object):
    def threeSumClosest(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: int
        """
        closet = float('inf')
        closet_num = float('inf')
        nums.sort()
        for i in range(len(nums) -2):
            left = i +1
            right = len(nums) - 1
            while left < right:
                total = nums[i] + nums[left] + nums[right]
                result = target - total
                if abs(result) < closet :
                    closet = abs(result)
                    closet_num = total
                if total < target :
                    left += 1
                elif total > target:
                    right -= 1
                else :
                    return total
        return closet_num
